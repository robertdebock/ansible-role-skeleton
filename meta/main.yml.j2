galaxy_info:
  author: Robert de Bock
  role_name: {{ role_name }}
  description: Install and configure {{ role_name }} on your system.
  license: Apache-2.0
  company: none
  min_ansible_version: 2.7

  platforms:
    - name: Alpine
      versions:
        - all
    - name: Debian
